<% const existeTitulo = typeof titulo !== "undefined"%>
<% const estaCreando = typeof pelicula === "undefined"%>
<% const existeMensaje = typeof mensaje !== "undefined"%>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>
        <%= existeTitulo ? titulo : 'Examen Web'%>
    </title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.css">
</head>

<body>
<div class="container">
    <h1><%= estaCreando ? 'REGISTRAR':'ACTUALIZAR' %> PELICULA</h1>
    <% if (existeMensaje){%>
    <p>MENSAJE: <%=mensaje%></p>
    <%}%>
    <form action="/pelicula/<%= estaCreando ? 'crear' : 'actualizar' %>-pelicula/<%= estaCreando ? '' : pelicula.id %>" method="POST">
        <div class="col-sm-10">
            <div class="row">
                <div class="col-sm-6 form-group">
                    <div class="form-group">
                        <label class="col-form-label" for="autor">Autor</label>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label" for="nombre">Nombre</label>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label" for="anioLanzamiento">AÃ±o de Lanzamiento</label>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label" for="rating">Rating</label>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label" for="actoresPrincipales">Actores Principales</label>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label" for="sinopsis">Sinopsis</label>
                    </div>
                </div>
                <div class="col-sm-6 form-group">
                    <div class="form-group">
                        <select class="custom-select" id="actor" name="actor">
                            <option selected>Opcion...</option>
                            <% arregloActores.forEach((actores)=>{%>
                            <option value="<%= actores.id%>">
                                <%= actores.nombres%>
                                <%= actores.apellidos%>
                            </option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" id="nombre" name="nombre" value="<%= estaCreando ? '' : pelicula.nombre%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" id="anioLanzamiento" name="anioLanzamiento" value="<%= estaCreando ? '' : pelicula.anioLanzamiento%>" >
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" id="rating" name="rating" value="<%= estaCreando ? '' : pelicula.rating%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" id="actoresPrincipales" name="actoresPrincipales" min=1 value="<%= estaCreando ? '' : pelicula.actoresPrincipales%>">
                    </div>
                    <div class="form-group">
        <textarea class="form-control" cols="30" rows="5" id="sinopsis" name="sinopsis">
            <%= estaCreando ? '' : pelicula.sinopsis%>
        </textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <button class="btn btn-outline-success btn-block">
                    <%= estaCreando ? 'Crear' : 'Actualizar'%> pelicula
                </button>
            </div>
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                <div>
                    <a href="/actor/inicio"><button class="btn btn-outline-dark btn-block">Regresar</button></a>
                </div>

            </div>
        </div>

    </form>


</div>
</div>
<script src="/js/jquery.js"></script>
<script src="/js/popper.js"></script>
<script src="/bootstrap/js/bootstrap.js"></script>
</body>

</html>