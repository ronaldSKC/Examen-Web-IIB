<% const existeTitulo = typeof titulo !== "undefined"%>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>
        <%= existeTitulo ? titulo : 'Examen Web'%>
    </title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.css">
</head>

<body>
    <div class="container">
        <form action="/actor/crear-actor" method="POST">
            <h1>Crear Actor</h1>
            <div class="col-sm-10">
                <div class="row">
                    <div class="col-sm-6">
                        <div>
                            <label for="nombres">Nombres</label>
                        </div>
                        <div>
                            <label for="apellidos">Apellidos</label>
                        </div>
                        <div>
                            <label for="fechaNacimiento">Fecha de Nacimiento</label>
                        </div>
                        <div>
                            <label for="numeroPeliculas">Número de Peliculas</label>
                        </div>
                        <div>
                            <label for="retirado">Retirado</label>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div>
                            <input class="form-control" type="text" id="nombres" name="nombres">
                        </div>
                        <div>
                            <input class="form-control" type="text" id="apellidos" name="apellidos">
                        </div>
                        <div>
                            <input class="form-control" type="date" id="fechaNacimiento" name="fechaNacimiento">
                        </div>
                        <div>
                            <input class="form-control" type="number" id="numeroPeliculas" name="numeroPeliculas" min=1>
                        </div>
                        <div>
                            <select class="custom-select" id="retirado" name="retirado">
                                <option selected>Opcion...</option>
                                <option value=true>Si</option>
                                <option value=false>No</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-2">
                <div class="row">
                    <div>
                        <button>Crear</button>
                    </div>
                </div>
            </div>
        </form>
        <div class="row">
            <a href="/pelicula/crear-pelicula">
                <button>Crear Peliculas</button></a>
        </div>
    </div>
    <div>
        <h2>Listado de Peliculas</h2>
        <div class="scroll-tabla">
            <table class="table table-hover animated slideInLeft">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Año de Lanzamiento</th>
                        <th>Rating</th>
                        <th>Actores Principales</th>
                        <th>Sinopsis</th>
                        <th>Actor</th>
                    </tr>
                </thead>
                <tbody>
                    <% arreglo.map( (movie)=> { %>
                    <tr>
                        <td>
                            <%= movie.nombre%>
                        </td>
                        <td>
                            <%= movie.anioLanzamiento%>
                        </td>
                        <td>
                            <%= movie.rating%>
                        </td>
                        <td>
                            <%= movie.actoresPrincipales%>
                        </td>
                        <td>
                            <%= movie.sinopsis%>
                        </td>
                        <td>
                            <% arregloActores%>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <script src="/js/jquery.js"></script>
    <script src="/js/popper.js"></script>
    <script src="/bootstrap/js/bootstrap.js"></script>
    <script>
        $(function () {
            $('.popover-contenido').popover({
                container: 'body'
            })
        })
    </script>
</body>

</html>