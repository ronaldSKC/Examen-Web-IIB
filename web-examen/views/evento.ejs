<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Evento</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.css">
</head>

<body>
    <div class="container">
            <form action="/evento" method="GET">
        <div class="row">
            <h1>Eventos</h1>
            <div></div>
        </div>
        <div class="row">
            
                <div class="col-sm-4">
                    <label for="busqueda">Buscar</label>
                </div>
                <div class="col-sm-6">
                    <input class="form-control" type="text" id="busqueda" name="busqueda">
                </div>
                <div class="col-sm-2">
                    <button class="btn btn-outline-info btn-block ">Buscar</button>
                </div>

            </div>
            <div class="row">
            </div>
        </form>
        <div>
            <h2>Listado de Peliculas</h2>
            <div class="scroll-tabla">
                <table class="table table-hover animated slideInLeft">
                    <thead>

                    <tr>
                        <th>Nombre</th>
                        <th>AÃ±o de Lanzamiento</th>
                        <th>Rating</th>
                        <th>Actores Principales</th>
                        <th>Sinopsis</th>
                        <th>Actor</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% arreglo.map( (movie)=> { %>
                    <tr>
                        <td>
                            <%= movie.nombre%>
                        </td>
                        <td>
                            <%= movie.anioLanzamiento%>
                        </td>
                        <td>

                            <%= movie.rating%>
                        </td>
                        <td>
                            <%= movie.actoresPrincipales%>
                        </td>
                        <td>
                            <%= movie.sinopsis%>
                        </td>
                        <td>
                            <% arregloActores%>

                        </td>
                    </tr>
                    <% }) %>
                    </tbody>
                </table>
            </div>
        <td>
            <a href="/evento/ver-pelicula" class="quitar-link">
                <button class="btn btn-outline-info btn-block estaciado-boton">Ver</button>
            </a>
        </td>
    </div>
    <script src="/js/jquery.js"></script>
    <script src="/js/popper.js"></script>
    <script src="/bootstrap/js/bootstrap.js"></script>
</body>

</html>